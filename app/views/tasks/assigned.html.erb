<%= content_for :breadcrumb do %>
	<ul class="breadcrumb">
		<li><i class="icon-home"></i> <a href="<%= root_path %>">Home</a><span class="divider"><i class="icon-angle-right"></i></span></li>
		<li class="active">My Tasks</li>
	</ul><!--.breadcrumb-->
<% end %>

<% content_for :header do %>
	<div class="page-header position-relative inline">
		<h1 class="span10">My Tasks</h1>
		<span class="pull-right"><a class="btn btn-primary btn-small" href="<%= new_task_path %>"><i class="icon-plus"></i>Add</a></span>
	</div><!--/page-header-->
<% end %>

<div class="widget-box transparent">
		
		<div class="widget-header">
			<div class="widget-toolbar no-border">
				<ul class="nav nav-tabs" id="recent-tab">
					<li class="active"><a data-toggle="tab" href="#today-tab">Today</a></li>
					<li><a data-toggle="tab" href="#week-tab">This Week</a></li>
					<li><a data-toggle="tab" href="#month-tab">This Month</a></li>
					<li><a data-toggle="tab" href="#all-tab">All</a></li>
				</ul>
			</div>
		</div>
		
		<div class="widget-body">
			<div class="widget-main padding-5">
				<div class="tab-content padding-8">
					<div id="today-tab" class="tab-pane active">
						<ul id="tasks" class="item-list">
							<% @tasks.each_with_index do |t| %>
								<li class="item-blue clearfix">
									<label class="inline">
										<%= check_box_tag 'completed', t.is_open, true, disabled: true, class: 'ace-checkbox-2' %>
										<span class="lbl">&nbsp;<%= t.title %></span>
										<% priority = Task::PRIORITY.key(t.priority) %>
										<span class="<%= task_priority_class(priority)%>" style="width: 44px;"><%= priority %></span>
									</label>
									<div class="inline pull-right position-relative">
										<button class="btn btn-minier bigger btn-yellow dropdown-toggle" data-toggle="dropdown"><i class="icon-angle-down icon-only"></i></button>
										<ul class="dropdown-menu dropdown-icon-only dropdown-yellow pull-right dropdown-caret dropdown-closer">
											<li><a href="#" class="tooltip-success" data-rel="tooltip" title="Rate&nbsp;task" data-placement="left"><span class="green"><i class="icon-check"></i></span></a></li>
											<li><a href="#" class="tooltip-error" data-rel="tooltip" title="Edit" data-placement="left"><span class="blue"><i class="icon-edit"></i></span></a></li>
										</ul>
									</div>
								</li>
							<% end %>
						</ul>
					</div>
					
					<div id="week-tab" class="tab-pane">
						
					</div>
					
					<div id="month-tab" class="tab-pane">
						
					</div>
					
					<div id="all-tab" class="tab-pane">
						
					</div>
				</div>
			</div>
		</div>
</div>
<%= content_for :inline_scripts do %>
	<script type='text/javascript'>
		window.onload = function() {
			$('li#nav-tasks').addClass('active open');
			$('li#nav-tasks-assigned').addClass('active');
		};
	</script>
<% end %>
